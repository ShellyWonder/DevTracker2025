@* AnimatedCard *@
@* card component wrapper with animation delay based on index. *@
<MudCard Elevation="5"
         Class="@($"h-100 project-card elevated-hover fade-in {Class}")"
         style="@GetCardAnimationStyle()"
         @onclick="@OnClick">
    @ChildContent
</MudCard>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter, EditorRequired]
    public int Index { get; set; } = 0;

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter] 
    public string? Class { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetCardAnimationStyle()
    {
        var delay = Index * 100;
        return $"animation-delay: {delay}ms;";
    }
}
