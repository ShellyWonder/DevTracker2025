@* TitleComponentPage *@
@* Created to ensure consistency among pages *@

<MudText Typo="@Typo"
         Color="@Color"
         Class="@Class"
         GutterBottom>
    @TitleContent
</MudText>

@code {
    [Parameter, EditorRequired]
    public String Title { get; set; } 

    // Internally we treat it as markup (so <em> etc. works)
    private MarkupString TitleContent =>
        string.IsNullOrWhiteSpace(Title)
            ? default
            : (MarkupString)Title;

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public Typo Typo { get; set; } = Typo.h1;

    [Parameter]
    public string? Class { get; set; }
}
