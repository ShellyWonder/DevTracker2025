@* TitleComponentPage *@
@* Created to ensure consistency among pages *@

@if (!string.IsNullOrWhiteSpace(Subtitle))
{
    <MudText Typo="@SubtitleTypo"
             Color="@SubtitleColor"
             Class="@SubtitleClass"
             GutterBottom="false">
        @SubtitleContent
    </MudText>
}


<MudText Typo="@Typo"
         Color="@Color"
         Class="@Class"
         GutterBottom>
    @if (TitleTemplate is not null)
    {
        @TitleTemplate
    }
    else
    {
        @TitleContent
    }
</MudText>

    @code {
    #region TITLE
    [Parameter]
    public String Title { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? TitleTemplate { get; set; }

    // Internally we treat it as markup (so <em> etc. works)
    private MarkupString TitleContent =>
        string.IsNullOrWhiteSpace(Title)
            ? default
            : (MarkupString)Title;

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public Typo Typo { get; set; } = Typo.h1;

    [Parameter]
    public string? Class { get; set; }
  #endregion

  #region SUBTITLE
    [Parameter]
    public string? Subtitle { get; set; }

    private MarkupString SubtitleContent =>
        string.IsNullOrWhiteSpace(Subtitle)
            ? default
            : (MarkupString)Subtitle;

    [Parameter]
    public Color SubtitleColor { get; set; } = Color.Dark;

    [Parameter]
    public Typo SubtitleTypo { get; set; } = Typo.subtitle1;

    [Parameter]
    public string? SubtitleClass { get; set; } = "mb-1";
    #endregion
}
