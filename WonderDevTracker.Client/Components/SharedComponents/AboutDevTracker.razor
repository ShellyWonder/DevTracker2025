@* AboutDevTracker *@
@using WonderDevTracker.Client.Components.SharedComponents

<AnimatedCard Index="Index">
	<MudCardHeader Class="ps-3, pb-0">
		<CardHeaderContent>
			<AppLogoLight />
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent Class="pt-0">
		<MudText Color="Color.Dark" Typo="Typo.body1">
		DevTracker is a project and ticket management system designed 
		for teams who want clear workflows,
		role-based collaboration, and centralized visibility 
		into the work happening across their organization.
		Each company using DevTracker has its own secure workspace with projects, tickets,
		and members isolated from other organizations.
		</MudText>
	</MudCardContent>
</AnimatedCard>

@code {
	[Parameter, EditorRequired]
	public int Index { get; set; }
}
