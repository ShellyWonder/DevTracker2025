@* TicketMetaRow: Priority | Status | Type in equal-height boxes *@
@typeparam TPriority where TPriority : struct, System.Enum
@typeparam TStatus where TStatus : struct, System.Enum
@typeparam TType where TType : struct, System.Enum


<AnimatedBlock Index="@Index">
	<MudGrid>
		<MudItem xs="12" md="4">
			<TicketEnumCard TEnum="TPriority"
							Title="Priority"
							CanEdit="CanEdit"
							Value="Priority"
							ValueChanged="PriorityChanged" />
							
		</MudItem>

		<MudItem xs="12" md="4">
			<TicketEnumCard TEnum="TStatus"
							Title="Status"
							CanEdit="CanEdit"
							Value="Status"
							ValueChanged="StatusChanged" />
		</MudItem>

		<MudItem xs="12" md="4">
			 <TicketEnumCard TEnum="TType"
							Title="Type"
							CanEdit="CanEdit"
							Value="Type"
							ValueChanged="TypeChanged" />
		</MudItem>

	</MudGrid>


</AnimatedBlock>


@code {
	[Parameter]
	public TicketDTO Ticket { get; set; } = default!;
	[Parameter]
	public int Index { get; set; }

	[Parameter]
	public bool CanEdit { get; set; } = false;

	[Parameter]
	public TPriority? Priority { get; set; }
	[Parameter]
	public EventCallback<TPriority?> PriorityChanged { get; set; }


	[Parameter]
	public TStatus? Status { get; set; }
	[Parameter]
	public EventCallback<TStatus?> StatusChanged { get; set; }


	[Parameter]
	public TType? Type { get; set; }
	[Parameter]
	public EventCallback<TType?> TypeChanged { get; set; }


}
