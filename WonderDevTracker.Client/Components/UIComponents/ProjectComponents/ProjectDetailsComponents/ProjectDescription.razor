@*ProjectDescription *@

<AnimatedCard Index="Index">
    <MudCardHeader>
        <MudText Typo="Typo.h5" Color="Color.Primary">Description</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body1">
            @Project.Description
        </MudText>
    </MudCardContent>
</AnimatedCard>

@code {
    [Parameter, EditorRequired]
    public ProjectDTO Project { get; set; } = default!;

    [Parameter, EditorRequired]
    public int Index { get; set; }
}
